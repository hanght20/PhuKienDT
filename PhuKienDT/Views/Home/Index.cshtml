@using PhuKien.Model.Entities
@model Tuple<List<Product>, List<Product>>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col mt-4">
        <h3 class="text-center">SẢN PHẨM MỚI</h3>
        <div class="card-deck">
            @for (int i = 0; i <= 3; i++)
            {
                <div class="card">
                    <img src="~/image/anh/@Model.Item1[i].Anh" alt="" class="card-img-top">
                    <div class="card-body text-center">
                        <button class="btn btn-outline-danger btn-sm" onclick="location.href ='/Product/Details/@Model.Item1[i].MaSanPham'"><i class="fas fa-search-plus"></i></button>
                        <button class="btn btn-outline-danger btn-sm">Mua ngay</button>
                        <button class="btn btn-outline-danger btn-sm" onclick= "AddToCart('@Model.Item1[i].MaSanPham')"><i class="fas fa-shopping-cart"></i></button>
                        <h5 class="mt-2 text-dark">@Model.Item1[i].TenSanPham</h5>
                        <h6>@Model.Item1[i].Gia đ</h6>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-outline-info mt-3 " style="width: 30%; border-radius: 5px;">Xem thêm</button>
        </div>
        <h3 class="text-center col mt-4">SẢN PHẨM NỔI BẬT</h3>
        <div class="card-deck">
            @for (int i = 4; i <= 7; i++)
            {
                <div class="card">
                    <img src="~/image/anh/@Model.Item2[i].Anh" alt="" class="card-img-top">
                    <div class="card-body text-center">
                        <button class="btn btn-outline-danger btn-sm" onclick="location.href = '/Product/Details/@Model.Item2[i].MaSanPham'"><i class="fas fa-search-plus"></i></button>
                        <button class="btn btn-outline-danger btn-sm">Mua ngay</button>
                        <button class="btn btn-outline-danger btn-sm" onclick="AddToCart('@Model.Item2[i].MaSanPham')"><i class="fas fa-shopping-cart"></i></button>
                        <h5 class="mt-2 text-dark">@Model.Item2[i].TenSanPham</h5>
                        <h6>@Model.Item2[i].Gia đ</h6>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-outline-info mt-3 " style="width: 30%; border-radius: 5px;">Xem thêm</button>
        </div>
    </div>
</div>

